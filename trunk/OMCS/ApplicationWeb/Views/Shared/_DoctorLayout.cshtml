                    <li class="@Html.IsActive("DoctorComment", "Index")">
                        <a href="@Url.Action("Index", "DoctorComment")"><i class="glyphicon glyphicon-list-alt"></i> Tin nhắn</a>
                    </li>
                    <li class="@Html.IsActive("AdminTemplate", "Index")">
