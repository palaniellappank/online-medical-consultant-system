@{
    ViewBag.Title = "Cập nhật hồ sơ bệnh án";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
@section Styles{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet">
}

<script type="text/javascript">
    var formInJson = @Html.Raw(ViewBag.formInJson);
    var medicalProfileTemplateId = @(ViewBag.medicalProfileTemplateId);
    var medicalProfileId = @(ViewBag.medicalProfileId);
    var patientId = @(ViewBag.patientId);
    var treatmentHistoryUrl = "@Url.Action("List", "TreatmentHistory")";
