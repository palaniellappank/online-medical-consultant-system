@model OMCS.DAL.Model.Immunization
@using (Ajax.BeginForm("Create", "Immunization", null))
{
  <div class="modal-dialog">
    <div class="modal-content">
      <input name="MedicalProfileId" type="hidden" value="@Html.ValueFor(model=>model.MedicalProfileId)"/>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Thêm lượt tiêm chủng</h4>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="form-group">
                <label for="Name" class="control-label">@Html.DisplayNameFor(model=>model.Name)</label>
                <input id="Name" name="Name" class="form-control required" value="@Model.Name"/>
            </div>
            <div class="form-group">
                <label for="BoosterTime" class="control-label">@Html.DisplayNameFor(model=>model.BoosterTime)</label>
                <input id="BoosterTime" name="BoosterTime" maxlength="2" class="form-control required" type="number" value="@Model.BoosterTime"/>
            </div>
            <div class="form-group">
                <label for="DateImmunized" class="control-label">@Html.DisplayNameFor(model=>model.DateImmunized)</label>
                <input class="datepicker form-control required" readonly="readonly" name="DateImmunized" value="@Model.DateImmunized.ToShortDateString()"/>
            </div>
          </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Bỏ qua</button>
        <button class="btn btn-primary saveBtn">Lưu</button>
      </div>
    </div>
  </div>
}