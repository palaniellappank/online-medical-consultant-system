@model OMCS.DAL.Model.Allergy
@using (Ajax.BeginForm("Create", "Allergy", null))    
{
  <div class="modal-dialog">
    <div class="modal-content">
      <input name="MedicalProfileId" type="hidden" value="@Html.ValueFor(model=>model.MedicalProfileId)"/>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Thêm dị ứng</h4>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="form-group">
                <label for="FilmType" class="control-label">Loại dị ứng</label>
                @Html.DropDownList("AllergyTypeId", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">@Html.DisplayNameFor(model=>model.Name)</label>
                <input id="Name" name="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="DateLastOccurred" class="control-label">@Html.DisplayNameFor(model=>model.DateLastOccurred)</label>
                <input class="datepicker form-control" readonly name="DateLastOccurred" />
            </div>
            <div class="form-group">
                <label for="Reaction" class="control-label">@Html.DisplayNameFor(model=>model.Reaction)</label>
                <textarea id="Reaction" name="Reaction" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="Note" class="control-label">@Html.DisplayNameFor(model=>model.Note)</label>
                <textarea id="Note" name="Note" class="form-control"></textarea>
            </div>
          </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Bỏ qua</button>
        <button class="btn btn-primary saveBtn">Lưu</button>
      </div>
    </div>
  </div>
}