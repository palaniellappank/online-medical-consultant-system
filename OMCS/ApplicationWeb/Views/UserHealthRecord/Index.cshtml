        $('#lastname').editable({
            url: '/post',
            type: 'text',
            inputclass: 'width: 50px',
            pk: 1,
            name: 'lastname',
            title: 'Nhập họ',
            validate: function (value) {
                if ($.trim(value) == '') return jQuery.validator.messages.required;
            }
