@model OMCS.DAL.Model.MedicalProfileTemplate

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MedicalProfileTemplate</legend>

        @Html.HiddenFor(model => model.MedicalProfileTemplateId)

        <div class="editor-label">
            @Html.LabelFor(model => model.IsDefault)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDefault)
            @Html.ValidationMessageFor(model => model.IsDefault)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MedicalProfileTypeId, "MedicalProfileType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MedicalProfileTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.MedicalProfileTypeId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
