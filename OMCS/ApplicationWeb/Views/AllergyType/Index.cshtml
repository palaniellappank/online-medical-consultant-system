@model PagedList.IPagedList<OMCS.DAL.Model.AllergyType>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Index";  
}

<h2>Quản Lý Loại Film</h2>

<div>
    <button class="btn btn-primary create-button">Tạo Mới</button>
    @using (Html.BeginForm("Index", "AllergyType", FormMethod.Get, new { style = "float: right", @class = "form-inline" }))
    {
        <div class="form-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
        </div>
        <input type="submit" value="Tìm Kiếm" class="btn btn-primary" />
    }
</div>
<p></p>

<table class="table table-striped table-hover" id="list-of-film-type">
    <tr class="active">
        <th>
            @Html.ActionLink("Loại dị ứng", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Mô Tả", "Index", new { sortOrder = ViewBag.DescriptionSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>Thao Tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <button class="btn btn-primary edit-button" data-id="@item.AllergyTypeId">Cập Nhật</button>
                <button class="btn btn-danger delete-button" data-id="@item.AllergyTypeId">Xóa</button>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

<div class="modal fade in" id="edit-model">
    <div id="edit-container"></div>
</div>

<div class="modal fade in" id="create-model">
    <div id="create-container"></div>
</div>

<div class="modal fade in" id="delete-model">
    <div id="delete-container"></div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("form").validate({
            rules: {
                Name: {
                    maxlength: 4
                }
            }
        })

        $(".create-button").click(function () {
            var url = "/AllergyType/Create";
            $.get(url, function (data) {
                $("#create-container").html(data);
                $("#create-model").modal("show");
                $("#create-form").validate({
                });
            });
        });

        $(".edit-button").click(function () {
            var url = "/AllergyType/Edit";
            var id = $(this).attr("data-id");
            $.get(url + "/" + id, function (data) {
                $("#edit-container").html(data);
                $("#edit-model").modal("show");
                $("#edit-form").validate({
                });
            });
        });

        $(".delete-button").click(function () {
            var url = "/AllergyType/Delete";
            var id = $(this).attr("data-id");
            $.get(url + "/" + id, function (data) {
                $("#delete-container").html(data);
                $("#delete-model").modal("show");
            });
        });
    });
</script>
