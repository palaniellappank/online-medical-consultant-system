@{
    ViewBag.Title = "Xem chi tiết hồ sơ bệnh án";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section Scripts{
    @Scripts.Render("~/bundles/jsTemplateEditor")
}

<script type="text/javascript">
    var detailsInJson = @Html.Raw(ViewBag.detailsInJson);
    var medicalProfileId = @(ViewBag.medicalProfileId);
    var treatmentHistoryUrl = "@Url.Action("ListView", "TreatmentHistory")";
    var filmDocumentUrl = "@Url.Action("ListView", "FilmDocument")";
    var allergyUrl = "@Url.Action("ListView", "Allergy")";
    var immunizationUrl = "@Url.Action("ListView", "Immunization")";
</script>

<style>
    .medical-profile-overview {
        position: initial;
        bottom: auto;
        left:auto;
        background-color: #603cba;
        color: #fff;
    }
</style>

<div id="build">
    <form id="target" class="form-horizontal" action="@Url.Action("UpdateMedicalProfile")">
        <div class="control-group">
            <h2>@(ViewBag.medicalProfileName)</h2>
        </div>
        <fieldset>
        </fieldset>
    </form>

    <div class="medical-profile-overview">
    <div class="row">
        <div class="col-md-2 col-lg-2" align="center">
            <img alt="User Pic" src="~/Content/Image/ProfilePicture/@ViewBag.doctor.ProfilePicture" class="img-circle doctor-img">
        </div>
        <div class="col-md-10 col-lg-10">
            <table class="table">
                <tbody>
                    <tr>
                        <td>Bác Sĩ: </td>
                        <td>@ViewBag.doctor.FullName</td>
                        <td>Chuyên Khoa: </td>
                        <td>@ViewBag.doctor.SpecialtyField.Name</td>                        
                    </tr>
                    <tr>
                        <td>Ngày tạo: </td>
                        <td>@ViewBag.createdDate.ToShortDateString()</td>
                        <td>Bệnh viện</td>
                        <td>@ViewBag.hospital</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    </div>
</div>

    <div class="row clearfix">
    </div>

<div class="modal fade in" id="modal-popup">
</div>

<div class="modal fade in" id="modal-popup-img">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <div class="modal-content">
            <img src="#" class="img-responsive">
        </div>
      </div>
    </div>
  </div>
</div>

<script src="~/Content/FormBuilder/js/config.js"></script>
<script data-main="../main-view" src="~/Content/FormBuilder/js/lib/require.js" ></script>