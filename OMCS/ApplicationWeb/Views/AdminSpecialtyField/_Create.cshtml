@model OMCS.DAL.Model.SpecialtyField

<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        
            
            @if (ViewBag.isChild)
            {
                <h4 class="modal-title">Thêm Chuyên Khoa</h4>
            } else 
            {
                <h4 class="modal-title">Thêm Khoa</h4>   
            }
      </div>

    @using (Ajax.BeginForm("Create", "AdminSpecialtyField", FormMethod.Post,
                    new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        UpdateTargetId = "list-of-specialty-field"
                    }, new { id = "create-form" }))
    {
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
      <div class="modal-body">
          @if (ViewBag.isChild)
          {
            <div class="form-group">
                <label for="ParentId" class="control-label">Tên Khoa</label>
                @Html.DropDownList("ParentId", null, new { @class = "form-control" })
            </div>
              
            <div class="form-group">
                <label for="Name">Tên Chuyên Khoa</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control required" })
            </div>
          }
          else
          {
                <div class="form-group">
                    <label for="Name">Tên Khoa</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control required" })
                </div>
          }
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Bỏ qua</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
      </div>
    }
    </div>
  </div>