<!DOCTYPE html>
<html lang="en">
<head>
    @using OMCS.Web
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OMCS</title>
    <link href="~/Content/bootstrap-flatly.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootply.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.9.0.js"></script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts");
    }
</head>

<body>
    <div class="navbar-wrapper">
        <div class="container">
            <div class="navbar navbar-static-top navbar-default">

                <div class="navbar-header">
                    <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="navbar-brand" href="#">OMCS</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class='@Html.IsActive("Home", "Index")'>
                            @Html.ActionLink("Trang chủ", "Index", "Home")
                        </li>
                         <li class='@Html.IsActive("Account", "Login")'>
                            @Html.ActionLink("Đăng nhập", "Login", "Account")
                        </li>
                         <li class='@Html.IsActive("Account", "Register")'>
                            @Html.ActionLink("Đăng kí", "Register", "Account")
                        </li>           
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
        <!-- /container -->
    </div>
    <!-- /navbar wrapper -->
</body>

</html>
