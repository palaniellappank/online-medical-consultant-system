                        </li>
                        <li class="@Html.IsActive("AdminTemplate", "Index")">
                            <a href="@Url.Action("Index", "AdminTemplate")"><i class="fa fa-files-o fa-fw"></i>Xem mẫu hồ sơ</a>
                        </li>
                    </ul>
                    <!-- /#side-menu -->
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
