<!DOCTYPE html>
<html>
<head>
    @using OMCS.Web
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/User.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet">
    <link href="~/Content/toggle-switch.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.9.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/Content/select2/select2.css" rel="stylesheet">
    <script src="~/Content/select2/select2.js"></script>

    <link href="~/Content/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
    <script src="~/Content/bootstrap3-editable/js/bootstrap-editable.js"></script>
    <script src="~/Scripts/site.js"></script>
</head>
<body>
    
    <div class="container" style="margin-top:100px;">
        <div class="row">
		    <div class="row nav-row">
			    <div class="col-md-2 @Html.IsActive("UserInfo", "Index") @Html.IsActive("User", "Index")">
                    <a href="@Url.Action("Index", "UserInfo")">
				        <span class="glyphicon glyphicon-user"></span>
				        <p>Thông Tin Chung</p>
                    </a>
			    </div>
			    <div class="col-md-2 @Html.IsActive("UserHealthRecord", "Index")">
                    <a href="@Url.Action("Index", "UserHealthRecord")">
				        <span class="glyphicon glyphicon-heart"></span>
				        <p>Sức Khỏe Cơ Bản</p>
                    </a>
			    </div>
			    <div class="col-md-2 @Html.IsActive("UserMedicalProfile", "Index")">
                    <a href="@Url.Action("Index", "UserMedicalProfile")">
				        <span class="glyphicon glyphicon-list-alt"></span>
				        <p>Hồ Sơ Bệnh Án</p>
                    </a>
			    </div>
			    <div class="col-md-2 @Html.IsActive("UserConversation", "Index")">
                    <a href="@Url.Action("Index", "UserConversation")">
				        <span class="glyphicon glyphicon-bookmark"></span>
				        <p>Lược Sử Tư Vấn</p>
                    </a>
			    </div>
			    <div class="col-md-2 @Html.IsActive("UserConversation", "Index")">
                    <a href="@Url.Action("Index", "UserConversation")">
				        <span class="glyphicon glyphicon-comment"></span>
				        <p>Tư Vấn Online</p>
                    </a>
			    </div>
			    <div class="col-md-2">
                    <a href="@Url.Action("Logout", "Account")">
				        <span class="glyphicon glyphicon-log-out"></span>
				        <p>Đăng Xuất</p>
                    </a>
			    </div>
		    </div>
        </div>
    </div>

    <div class="container body-content">
        <h4>Xin Chào: @User.LastName @User.FirstName</h4>
        @RenderBody()
        <hr />
        <footer class="text-center">Copyright Group 2 - FPT University - 2014</footer>
    </div>
</body>
</html>