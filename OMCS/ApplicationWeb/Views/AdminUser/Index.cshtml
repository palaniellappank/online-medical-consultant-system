@model PagedList.IPagedList<OMCS.DAL.Model.User>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản Lý Người Dùng</h2>

<div>
    @Html.ActionLink("Tạo Mới", "Create", "", new { @class = "btn btn-primary" })
    @using (Html.BeginForm("Index", "AdminUser", FormMethod.Get, new { style = "float: right", @class = "form-inline" }))
    {
        <div class="form-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
        </div>
        <input type="submit" value="Tìm Kiếm" class="btn btn-primary" />
    }
</div>
<p></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="active">
            <th>
                @Html.ActionLink("Tên đăng nhập", "Index", new { sortOrder = ViewBag.UserSortParam, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Tên đầy đủ", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Tình trạng", "Index", new { sortOrder = ViewBag.IsActiveParam, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Ngày tạo", "Index", new { sortOrder = ViewBag.DateSortParam, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>Sửa đổi
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @if (item.IsActive == true)
                {
                    <b class="text-success">Hoạt Động</b>
                }
                else
                {
                    <b class="text-danger">Bị Khóa</b>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Cập Nhật", "Edit", new { id = item.UserId }, new { @class = "btn btn-primary" })

                @if (item.IsActive == true)
                {

                    @Html.ActionLink("Vô Hiệu", "Deactivate", new { id = item.UserId }, new { @class = "btn btn-danger" })
                }
                else
                {
                    @Html.ActionLink("Kích Hoạt", "Activate", new { id = item.UserId }, new { @class = "btn btn-success" })
                }

            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

