@model IEnumerable<OMCS.DAL.Model.User>

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<h2>Quản Lý Người Dùng</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info btn-sm" })
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th>Sửa đổi
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @if (item.IsActive == true)
                {
                    <b class="text-success">Hoạt Động</b>
                }
                else
                {
                    <b class="text-danger">Bị Khóa</b>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <img src="@item.ProfilePicture" style="width:40px; height:40px;" />
            </td>
            <td>
                @Html.ActionLink("Cập Nhật", "Edit", new { id = item.UserId }, new { @class = "btn btn-info btn-sm" })

                @if (item.IsActive == true)
                {

                    @Html.ActionLink("Vô Hiệu", "Deactivate", new { id = item.UserId }, new { @class = "btn btn-danger btn-sm" })
                }
                else
                {
                    @Html.ActionLink("Kích Hoạt", "Activate", new { id = item.UserId }, new { @class = "btn btn-success btn-sm" })
                }

            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $("a").css("text-decoration", "none");
    })
</script>
